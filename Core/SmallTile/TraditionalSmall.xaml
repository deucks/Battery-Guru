<UserControl x:Class="Core.SmallTile.TraditionalSmall"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="336" d:DesignWidth="336">

    <Grid x:Name="LayoutRoot">
        <Grid x:Name="backgroundStatus" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="242" RenderTransformOrigin="0.5,0.5" Opacity="0.7" Margin="45,64,0,0">
            <Grid.Background>
                <SolidColorBrush Color="White"/>
            </Grid.Background>
        </Grid>
        <TextBlock x:Name="ChargeStatus" HorizontalAlignment="Left" TextWrapping="Wrap" Text="100%" VerticalAlignment="Top" FontSize="125" FontFamily="Segoe WP Light" Width="336" Foreground="#FFFDFDFD" Height="172" TextAlignment="Center" Margin="0,164,0,0"/>

        <Rectangle HorizontalAlignment="Left" Height="100" Margin="37,64,0,0" Stroke="White" VerticalAlignment="Top" Width="258" StrokeThickness="8"/>
        <Rectangle HorizontalAlignment="Left" Height="50" Margin="291,89,0,0" Stroke="White" VerticalAlignment="Top" Width="10" StrokeThickness="8"/>

    </Grid>
</UserControl>